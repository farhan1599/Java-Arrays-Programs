package com.practice.arrays;

public class ThirdSmallest {

	public static void main(String[] args) {

		int[] arr = { 12, 23, 43, 32, 54,34 };

		findThirdMin(arr);
	}

	private static void findThirdMin(int[] arr) {
		int smallest = arr[0];
		int second_smallest = arr[0];
		int third_smallest = arr[0];

		for (int i = 1; i < arr.length; i++) {

			if (arr[i] < smallest) {
				third_smallest = second_smallest;
				second_smallest = smallest;
				smallest = arr[i];

			} else if (arr[i] != smallest && arr[i] < second_smallest) {
				third_smallest = second_smallest;
				second_smallest = arr[i];

			} else if (arr[i] != smallest && arr[i] != second_smallest && arr[i] < third_smallest) {
				third_smallest = arr[i];
			}
		}
		System.out.println("Third smallest element is : " + third_smallest);

	}

}
